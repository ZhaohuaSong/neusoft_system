{% extends "mainbase.html" %}
{% load staticfiles %}
<html lang="en">
<head>
    <meta charset="UTF-8">
    {% block title %}
        <title>富融全渠道支付平台</title>
        <style>
            .bor {
                float: left;
                list-style: none;
                width: 15%;
                height: 20%;
                border-radius: 2px;
                margin-left: 10px;
                border: 2px solid #F7F7F7;
                text-align: center;
                padding: 5px
            }
        </style>
    {% endblock %}

</head>
<body class="no-skin">
{% block content %}
    <div class="main-content">
        <div class="breadcrumbs" id="breadcrumbs">
            <script type="text/javascript">
                try {
                    ace.settings.check('breadcrumbs', 'fixed')
                } catch (e) {
                }
            </script>


            <ul class="breadcrumb">
                <li>
                    <i class="ace-icon fa fa-home home-icon"></i>
                    <a href="#">首页</a>
                </li>

                <li><a href="#">系统管理</a></li>
                <li><a href="{% url 'sysadmin:user.list' %}">用户管理</a></li>
                <li class="active">上传用户头像</li>
            </ul><!-- /.breadcrumb -->
        </div>

        <div class="page-content">
            <div class="page-header">
            </div><!-- /.page-header -->
            <div class="row">
                <div class="col-xs-12">
                    <div>

                        <!-- 账户修改 -->
                        <div class="row">
                            <div class="col-xs-12">
                                <div class="widget-box col-xs-12">
                                    <div class="widget-header widget-header-blue widget-header-flat">
                                        <h4 class="widget-title lighter">编辑图片</h4>
                                    </div>
                                    <div class="space-20"></div>
                                    <img id="imghead" style="margin-left: 24%;"
                                         src="{{ MEDIA_URL }}{{ user.avatar }}"
                                         alt="{{ user.username }}" class="img-thumbnail">

                                    <div class="space-5"></div>
                                    <form style="padding: 2%" class="form-horizontal" method="post"
                                          enctype="multipart/form-data">
                                        {% csrf_token %}
                                        <div class="form-group">

                                            <label class="col-sm-3 control-label no-padding-right"> {{ form.avatar.label }} </label>

                                            <div class="col-sm-9">
                                                {{ form.avatar }}
                                                <div class="form-group has-error">
                                                    <div class="help-block col-xs-12 col-sm-reset inline">{{ form.avatar.errors }} </div>
                                                </div>
                                            </div>


                                        </div>
                                        <div class="space-20"></div>
                                        <hr>
                                        <div class="space-10"></div>
                                        <div class="clearfix ">
                                            <div class="space-5"></div>
                            {% include "form_buttons.html" %}<!-- /.form_buttons -->
                            <div style="height: 10px;"></div>
                                        </div>
                                        <div class="space-10"></div>

                                    </form>
                                </div><!-- /.col -->
                            </div><!-- /.row -->
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    </div>
    <script language="JavaScript">

        $('.btn-loading-example').click(function () {
            var $btn = $(this)
            $btn.button('loading');
            setTimeout(function () {
                $btn.button('reset');
            }, 5000);
        });

    </script>
      <script type="text/javascript">
            jQuery(function ($) {
                $("#btn-back").bind("click",
                        function () {
                            window.location.href = "{% url 'sysadmin:user.userInfo' %}"
                        });
            })
        </script>
{% endblock %}
<!-- /.main-content -->
</body>
</html>

