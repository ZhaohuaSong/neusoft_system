    def is_success(self, code):
        bSucc = False
        if False == self._RESPONSE_CODE.has_key(code):
            msg = '交易失败，没找到对应的错误码：[%s]' % code
            return (bSucc,msg)

        msg = ('%s [%s]') % (self._RESPONSE_CODE[code][0], code)
        if code == '00':
            bSucc = True
        else:
            bSucc = False
            #return msg
        return (bSucc,msg)

